<h1>Editing <%= @review.author %>'s review for <%= @product.name %>.</h1>

<h2>Review ID is <%= @review.id %></h2>

<%= form_for @review, :url => product_review_path(@review.product_id, @review.id) do |f| %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "Remove Review", product_review_path(@review.product_id, @review.id), :method => "delete", class: 'lowerNavLink' %>
<%= link_to "Back to Review", product_review_path(@review.product_id, @review.id), class: 'lowerNavLink' %>
